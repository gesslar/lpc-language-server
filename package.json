{
    "name": "lpc",
    "displayName": "LPC",
    "version": "1.0.8",
    "galleryBanner": {
        "color": "#000000",
        "theme": "dark"
    },
    "description": "Rich language support for LPC (Lars Pensjö C)",
    "main": "out/client/src/extension.js",
    "publisher": "jlchmura",
    "icon": "lpc-icon.png",
    "scripts": {
        "start": "npm run compile:bin && NODE_OPTIONS='--enable-source-maps' node out/server/src/bin.js test.c",
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -b && esbuild client/src/extension.ts server/src/server.ts --bundle --outdir=out --external:vscode --platform=node --format=cjs --sourcemap=external --sourcemap",
        "compile:bin": "tsc -b && esbuild server/src/bin.ts --bundle --outdir=out/server/src --external:vscode --platform=node --format=cjs --sourcemap=external --sourcemap",
        "watch": "npm run compile -- --sourcemap --watch",
        "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
        "test": "sh ./scripts/e2e.sh",
        "generate": "npm run gen:lpc",
        "vsce:package": "vsce package",
        "vsce:publish": "vsce publish",
        "gen:lpc": "npx antlr4ng -Dlanguage=TypeScript grammar/LPCLexer.g4 grammar/LPCParser.g4 -o server/src/parser3 -Xexact-output-dir -visitor -listener",
        "gen:pre": "npx antlr4ng -Dlanguage=TypeScript grammar/LPCPreprocessorLexer.g4 grammar/LPCPreprocessorParser.g4 -o server/src/preprocessor -Xexact-output-dir -visitor -listener"
    },
    "engines": {
        "vscode": "^1.75.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": true,
        "singleQuote": false,
        "bracketSameLine": true
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/jlchmura/lpc-language-server"
    },
    "activationEvents": [
        "workspaceContains:**/*.c",
        "workspaceContains:lpc-config.json"
    ],
    "contributes": {
        "languages": [
            {
                "id": "lpc",
                "aliases": [
                    "LPC",
                    "lpc"
                ],
                "extensions": [
                    ".lpc",
                    ".c",
                    ".h"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "lpc-lsp"
            }
        ],
        "grammars": [
            {
                "language": "lpc",
                "scopeName": "source.lpc.lang-server",
                "path": "./syntaxes/lpc.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "lpc.processAll",
                "title": "Process All Files",
                "category": "LPC"
            }
        ],
        "jsonValidation": [
            {
                "fileMatch": "lpc-config.json",
                "url": "./schemas/lpc.schema.json"
            },
            {
                "fileMatch": "lpc-config.json",
                "url": "./schemas/lpc-config.schema.json"
            }
        ]
    },
    "keywords": [
        "LPC",
        "language",
        "server",
        "Lars Pensjö",
        "C",
        "MUD",
        "LPMUD",
        "LDMUD",
        "FluffOS",
        "MudOS",
        "VSCode"
    ],
    "author": {
        "name": "jlchmura"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/jlchmura/lpc-language-server/issues"
    },
    "homepage": "https://github.com/jlchmura/lpc-language-server#readme",
    "extensionKind": [
        "workspace"
    ],
    "devDependencies": {
        "@types/mocha": "^9.1.0",
        "@types/node": "^16.18.14",
        "@types/vscode": "^1.75.0",
        "@typescript-eslint/eslint-plugin": "^5.54.0",
        "@typescript-eslint/parser": "^5.54.0",
        "antlr4ng-cli": "^2.0.0",
        "eslint": "^8.35.0",
        "mocha": "^9.2.1",
        "ts-loader": "^6.2.2",
        "ts-node": "10.9.2",
        "typescript": "5.3.3"
    },
    "dependencies": {
        "@types/picomatch": "^2.3.3",
        "antlr4-c3": "^3.4.1",
        "antlr4ng": "^3.0.3",
        "comment-parser": "^1.4.1",
        "esbuild": "^0.20.1",
        "fuzzysort": "^2.0.4",
        "glob": "^10.3.15",
        "picomatch": "^4.0.2",
        "vsce": "^2.15.0",
        "vscode-uri": "^3.0.8"
    }
}
